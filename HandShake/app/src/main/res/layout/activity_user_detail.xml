<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDetailActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/backgroundColor3"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/backgroundColor1"
        android:layout_margin="10dp"
        >

        <ImageView
            android:id="@+id/dpImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/flag_bhutan"
            />

    </androidx.cardview.widget.CardView>


    <EditText
        android:id="@+id/firstNameEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/text_view_with_border"
        android:hint="First Name"
        android:padding="8dp"
        android:singleLine="true"
        android:enabled="false"
        android:textColor="@color/textColor2"
        android:textColorHint="@color/textColor3"
        />

    <EditText
        android:id="@+id/lastNameEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:padding="8dp"
        android:layout_margin="10dp"
        android:background="@drawable/text_view_with_border"
        android:singleLine="true"
        android:enabled="false"
        android:textColor="@color/textColor2"
        android:textColorHint="@color/textColor3"
        />

    <EditText
        android:id="@+id/emailIdEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Email ID"
        android:padding="8dp"
        android:layout_margin="10dp"
        android:background="@drawable/text_view_with_border"
        android:singleLine="true"
        android:enabled="false"
        android:textColor="@color/textColor2"
        android:textColorHint="@color/textColor3"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/doneButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Save"
        android:background="@drawable/button_design_1"
        android:textColor="@color/textColor2"
        />

</LinearLayout>